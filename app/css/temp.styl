		width auto
		padding 0 25px
	header .top-line
		position relative
	header .top-line .wrap
		padding 20px 0
	header .top-line .wrap .logo
		width 100%
		text-align center
	header .top-line .wrap .logo a,
	header .top-line .wrap .logo span
		display block
		margin 0 auto
		float none
	header .top-line nav
		width 100%
		text-align center
		margin-top 10px
	header > .wrap
		padding 0 0 20% 0
	header
		background url('../images/main-bg.png') no-repeat center bottom/contain
	h1, h2, h3, h4, h5, h6
		font-size 36px
		line-height 40px
	header > .wrap h1
